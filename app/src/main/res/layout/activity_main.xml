<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#E8F5E9">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Perhitungan Gaji"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#4C1F7A"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp" />

    <!-- Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/labelNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Nama Anda"
            android:textColor="#4C1F7A"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:backgroundTint="#4C1F7A"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/labelStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="#4C1F7A"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkBoxMenikah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menikah"
            android:textColor="#4C1F7A"
            android:buttonTint="#4C1F7A"
            android:layout_marginBottom="16dp" />

        <!-- Golongan -->
        <TextView
            android:id="@+id/labelGolongan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Golongan"
            android:textColor="#597445"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupGolongan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioGolongan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golongan 1"
                android:textColor="#4C1F7A"
                android:buttonTint="#4C1F7A"
                android:layout_marginEnd="32dp" />

            <RadioButton
                android:id="@+id/radioGolongan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golongan 2"
                android:textColor="#4C1F7A"
                android:buttonTint="#4C1F7A" />
        </RadioGroup>
    </LinearLayout>

    <!-- Calculate Button -->
    <Button
        android:id="@+id/buttonHitung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HITUNG GAJI"
        android:backgroundTint="#4C1F7A"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"
        android:elevation="6dp"
        android:padding="12dp" />

    <!-- Result Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/textGajiPokok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaji Pokok:"
            android:textSize="16sp"
            android:textColor="#4C1F7A"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/textTunjangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunjangan:"
            android:textSize="16sp"
            android:textColor="#4C1F7A"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/textTotalGaji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Gaji:"
            android:textSize="16sp"
            android:textColor="#4C1F7A"
            android:paddingTop="8dp" />

    </LinearLayout>

</LinearLayout>